<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <ImageView
            android:id="@+id/image_view_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_avatar_componente" />

        <TextView
            android:id="@+id/text_view_nombre_apellidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_view_avatar"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/image_view_avatar"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Fernando Jesús Fernández Arroyo"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_mote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_nombre_apellidos"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/image_view_avatar"
            android:textColor="@android:color/black"
            android:text="Fendy" />

        <TextView
            android:id="@+id/text_view_movil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_mote"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/image_view_avatar"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="651492266" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
