<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010135"
    tools:context="com.fernandoj.bandasolapp.LoginActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <ImageView
            android:id="@+id/image_view_logo"
            android:layout_width="800px"
            android:layout_height="400px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="450px"
            android:src="@drawable/logobandasol" />

        <EditText
            android:id="@+id/edit_text_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_logo"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:backgroundTint="#c2c2c2"
            android:hint="Usuario"
            android:textColor="#f2f2f2"
            android:textColorHint="#c2c2c2" />

        <EditText
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_username"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:backgroundTint="#c2c2c2"
            android:hint="ContraseÃ±a"
            android:textColor="#f2f2f2"
            android:textColorHint="#c2c2c2"/>

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_password"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/entrar"
            android:textColor="#f2f2f2"
            android:background="@drawable/button_style"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
