<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/text_view_nombreEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concierto en el tiro de linea"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_view_icon_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_nombreEvento"
            android:src="@drawable/ic_map" />

        <TextView
            android:id="@+id/text_view_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_view_icon_loc"
            android:layout_alignTop="@id/image_view_icon_loc"
            android:layout_below="@id/text_view_nombreEvento"
            android:layout_marginStart="7dp"
            android:layout_toRightOf="@id/image_view_icon_loc"
            android:text="Avenida almirante topete"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/image_view_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_icon_loc"
            android:src="@drawable/ic_calendar" />

        <TextView
            android:id="@+id/text_view_fechaEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_lugar"
            android:layout_marginStart="7dp"
            android:layout_toRightOf="@id/image_view_fecha"
            android:text="26 de Marzo, 2017 12:45"
            android:textColor="@android:color/black" />


    </RelativeLayout>


</android.support.v7.widget.CardView>
